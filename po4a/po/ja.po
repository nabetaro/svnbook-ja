"\\.jpe?g$            break   svn:mime-type   image/jpeg\n"
"\\.m3u$              cont    svn:mime-type   audio/x-mpegurl\n"
"\\.m3u$              break   svn:eol-style   LF\n"
".*                  break   svn:eol-style   native\n"
